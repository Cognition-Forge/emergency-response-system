# PostgreSQL container configuration
POSTGRES_DB=materials_management
POSTGRES_USER=materials_admin
POSTGRES_PASSWORD=change_me
POSTGRES_PORT=5432

# SSL / authentication
POSTGRES_SSL_MODE=require
POSTGRES_HOST_AUTH_METHOD=scram-sha-256
POSTGRES_SSL_CERT_FILE=/certs/server.crt
POSTGRES_SSL_KEY_FILE=/certs/server.key

# Performance tuning
POSTGRES_INITDB_ARGS="--encoding=UTF-8 --locale=C --auth-host=scram-sha-256 --auth-local=scram-sha-256"
POSTGRES_MAX_CONNECTIONS=100
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB
POSTGRES_WORK_MEM=4MB
POSTGRES_MAINTENANCE_WORK_MEM=64MB

# Logging configuration
POSTGRES_LOG_LEVEL=info
POSTGRES_LOG_STATEMENT=all
POSTGRES_LOG_DURATION=on
POSTGRES_LOG_CONNECTIONS=on
POSTGRES_LOG_DISCONNECTIONS=on

# Application role configuration
MATERIALS_APP_USER=materials_app
MATERIALS_APP_PASSWORD=materials_app_password
